<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fragment Container for your content -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Your existing content goes here -->
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_light">

            <!-- Main Content -->
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Header Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical">

                        <!-- Profile Avatar -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/avatar_purple">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:background="@drawable/person"
                                android:tint="@android:color/white" />

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Home Title -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Home"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_dark"
                            android:gravity="center" />

                        <!-- Notification Icon -->
                        <ImageButton
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:src="@drawable/notification_alert"
                            android:background="@drawable/notification_bg"
                            app:tint="@color/text_dark" />

                    </LinearLayout>


                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginBottom="30dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="@color/card_dark">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="24dp">

                            <!-- Card Header -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Total Balance"
                                    android:textColor="@color/text_light_gray"
                                    android:textSize="16sp" />

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:tint="@color/text_light_gray" />

                            </LinearLayout>

                            <!-- Balance Amount -->
                            <TextView
                                android:id="@+id/tv_total_balance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$59,765.00"
                                android:textColor="@android:color/white"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="24dp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginBottom="30dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <!-- Card Header -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Income"
                                    android:textColor="@color/text_light_gray"
                                    android:textSize="16sp" />

                            </LinearLayout>

                            <!-- Balance Amount -->
                            <TextView
                                android:id="@+id/tv_total_income"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="24dp"
                                android:text="$500.00"
                                android:textColor="@color/black"
                                android:textSize="32sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginBottom="30dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <!-- Card Header -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Expense"
                                    android:textColor="@color/text_light_gray"
                                    android:textSize="16sp" />

                            </LinearLayout>

                            <!-- Balance Amount -->
                            <TextView
                                android:id="@+id/tv_total_expense"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="24dp"
                                android:text="$143.40"
                                android:textColor="@color/black"
                                android:textSize="32sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>


                    <!-- Analytics Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="20dp"
                        android:paddingBottom="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Analytics"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_dark" />

                        <!-- Year Selector -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_year_selector"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Year - 2022"
                            android:textSize="14sp"
                            android:textColor="@android:color/white"
                            app:icon="@drawable/dropdown_arrow"
                            app:iconTint="@android:color/white"
                            app:iconGravity="end"
                            app:backgroundTint="@color/orange_button"
                            app:cornerRadius="18dp"
                            style="@style/Widget.Material3.Button" />

                    </LinearLayout>

                    <!-- Chart Section -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginBottom="30dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@android:color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <!-- Chart Container -->
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                                <!-- Sample Bar Chart -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:gravity="bottom"
                                    android:paddingTop="20dp">

                                    <!-- Jan Bar -->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        android:gravity="center">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="$1,494"
                                            android:textSize="12sp"
                                            android:textColor="@color/text_gray"
                                            android:layout_marginBottom="8dp" />

                                        <View
                                            android:layout_width="20dp"
                                            android:layout_height="40dp"
                                            android:background="@color/bar_light_gray" />

                                    </LinearLayout>

                                    <!-- Feb Bar -->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        android:gravity="center">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="$1,664"
                                            android:textSize="12sp"
                                            android:textColor="@color/text_gray"
                                            android:layout_marginBottom="8dp" />

                                        <View
                                            android:layout_width="20dp"
                                            android:layout_height="60dp"
                                            android:background="@color/bar_light_gray" />

                                    </LinearLayout>

                                    <!-- Mar Bar -->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        android:gravity="center">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="$1,544"
                                            android:textSize="12sp"
                                            android:textColor="@color/text_gray"
                                            android:layout_marginBottom="8dp" />

                                        <View
                                            android:layout_width="20dp"
                                            android:layout_height="50dp"
                                            android:background="@color/bar_light_gray" />

                                    </LinearLayout>

                                    <!-- Apr Bar (Active) -->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        android:gravity="center">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="$2,972"
                                            android:textSize="12sp"
                                            android:textColor="@color/purple_primary"
                                            android:textStyle="bold"
                                            android:layout_marginBottom="8dp" />

                                        <View
                                            android:layout_width="20dp"
                                            android:layout_height="120dp"
                                            android:background="@drawable/bar_purple_gradient" />

                                    </LinearLayout>

                                    <!-- May Bar -->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        android:gravity="center">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="$2,464"
                                            android:textSize="12sp"
                                            android:textColor="@color/text_gray"
                                            android:layout_marginBottom="8dp" />

                                        <View
                                            android:layout_width="20dp"
                                            android:layout_height="80dp"
                                            android:background="@color/bar_light_gray" />

                                    </LinearLayout>

                                    <!-- Jun Bar -->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        android:gravity="center">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="$2,364"
                                            android:textSize="12sp"
                                            android:textColor="@color/text_gray"
                                            android:layout_marginBottom="8dp" />

                                        <View
                                            android:layout_width="20dp"
                                            android:layout_height="75dp"
                                            android:background="@color/bar_light_gray" />

                                    </LinearLayout>

                                    <!-- Jul Bar -->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        android:gravity="center">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="$3,894"
                                            android:textSize="12sp"
                                            android:textColor="@color/text_gray"
                                            android:layout_marginBottom="8dp" />

                                        <View
                                            android:layout_width="20dp"
                                            android:layout_height="95dp"
                                            android:background="@color/bar_light_gray" />

                                    </LinearLayout>

                                </LinearLayout>

                            </FrameLayout>

                            <!-- Month Labels -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="12dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Jan"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_gray"
                                    android:gravity="center" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Feb"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_gray"
                                    android:gravity="center" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Mar"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_gray"
                                    android:gravity="center" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Apr"
                                    android:textSize="12sp"
                                    android:textColor="@color/purple_primary"
                                    android:textStyle="bold"
                                    android:gravity="center" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="May"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_gray"
                                    android:gravity="center" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Jun"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_gray"
                                    android:gravity="center" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Jul"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_gray"
                                    android:gravity="center" />

                            </LinearLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Transactions Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="20dp"
                        android:paddingBottom="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Transactions"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View All"
                            android:textSize="14sp"
                            android:textColor="@color/text_gray" />

                    </LinearLayout>

                    <!-- Transaction List -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="20dp"
                        android:paddingBottom="100dp">

                        <!-- Puma Transaction -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <!-- Puma Logo -->
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="@color/logo_bg_gray">

                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_gravity="center"
                                    android:tint="@color/text_dark" />

                            </com.google.android.material.card.MaterialCardView>

                            <!-- Transaction Details -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginHorizontal="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Puma Store"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_dark" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bank Account"
                                    android:textSize="14sp"
                                    android:textColor="@color/text_gray"
                                    android:layout_marginTop="2dp" />

                            </LinearLayout>

                            <!-- Amount and Date -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="end">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$952"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/green_expense" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Fri, 05 April 2022"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_gray"
                                    android:layout_marginTop="2dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- RecyclerView for more transactions -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </FrameLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Home Button -->
        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/home"
                android:tint="@color/nav_icon_color" />

            <TextView
                android:id="@+id/home_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Home"
                android:textColor="@color/nav_text_color"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Add Button (Floating) -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/add_button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/black"
                app:srcCompat ="@drawable/add"
                app:tint="@color/white"
                app:borderWidth="0dp"
                app:elevation="6dp" />

        </FrameLayout>

        <!-- Insights Button -->
        <LinearLayout
            android:id="@+id/nav_insights"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/insights_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/insight"
                android:tint="@color/nav_icon_color" />

            <TextView
                android:id="@+id/insights_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Insights"
                android:textColor="@color/nav_text_color"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>